@{
    @model IList<ProductViewModel>
    ViewData["Title"] = "All Products";
}

<div class="card" style="width: 18rem">
    <div class="card-header">@ViewData["Title"]</div>
    <ul class="list-group list-group-flush">
        @for (int i = 0; i < (int)Model.Count; i++)
        {
            <a href="/Product/ById/@Model[i].Id" class="list-group-item"> @($"N.{i + 1}:") @Model[i].Name - @Model[i].Price lv </a>
        }
    </ul>
</div>

<div>
    <form class="form-inline">
        <div class="form-group mx-sm-3 mb-2">
            <label class="sr-only" name="keyword">Search for product</label>
            <input type="text" name="keyword" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Submit</button>
    </form>
</div>